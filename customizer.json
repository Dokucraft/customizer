  "options": {
    "better_lava": {
      "name": "Better Lava Shader",
      "command": "better_lava/configure",
      "settings": [
        {
          "type": "select",
          "desc": "Core shaders can be used to add variation to lava, massively improving the look of large lava lakes.\n\nThis is INCOMPATIBLE with mods that override the solid shader. Do NOT use this option together with mods like Sodium, or with shaderpacks.",
          "key": "enabled",
          "options": [
            {
              "name": "Disabled",
              "desc": "Vanilla-style lava with a custom texture.",
              "preview": "lava/vanilla_lava",
              "default": true,
              "arg": false
            },
            {
              "name": "Enabled",
              "desc": "Uses core shaders to randomize the texture and animation of lava.",
              "preview": "lava/better_lava",
              "perf": -2,
              "arg": true
            }
          ]
        }
      ]
    },
    "night_sky": {
      "name": "Vanilla Night Sky",
      "command": "night_sky/configure",
      "settings": [
        {
          "type": "select",
          "desc": "Dokucraft uses post shaders to draw anything the pack needs in the sky without requiring any mods like Optifine. Here you can select what to draw in the sky at night. These effects require the Fabulous graphics setting. If you are using Optifine, disable Custom Sky in the in-game options to see the shader sky.",
          "key": "sky",
          "options": [
            {
              "name": "Skybox",
              "desc": "Uses post shaders to draw a custom static skybox.",
              "preview": "night_sky/skybox",
              "default": true,
              "arg": "skybox"
            },
            {
              "name": "Procedural Starfield",
              "desc": "Uses post shaders to generate stars and nebulae without using any textures.",
              "preview": "night_sky/procedural",
              "perf": -3,
              "arg": "procedural"
            }
          ]
        },
        {
          "type": "select",
          "desc": "Auroras are beautiful lights that can be seen in the sky near the poles of the planet during solar storms. This effect can be enabled in Dokucraft, but it can significantly lower the performance unless you have a powerful GPU.",
          "key": "auroras",
          "options": [
            {
              "name": "No auroras",
              "default": true,
              "arg": false
            },
            {
              "name": "Auroras",
              "preview": "auroras",
              "perf": -4,
              "arg": true
            }
          ]
        },
        {
          "type": "vec3_color",
          "desc": "Choose a color for the auroras.",
          "key": "aurora_color",
          "requires": {
            "night_sky/1": 1
          },
          "default": [0.465, 2, 0.833]
        }
      ]
    },
    "end_sky": {
      "name": "End Sky",
      "command": "end_sky/configure",
      "settings": [
        {
          "type": "select",
          "desc": "Minecraft's End skybox repeats a texture 16x16 for each side of the box. Dokucraft can use Optifine or core shaders to override this behavior and create something spectacular in the End sky.",
          "key": "sky",
          "options": [
            {
              "name": "Optifine Skybox",
              "desc": "Uses Optifine's Custom Sky features to apply a custom static skybox.",
              "preview": "end_sky/optifine",
              "default": true,
              "arg": "optifine"
            },
            {
              "name": "Vanilla",
              "desc": "Uses the vanilla End skybox with a custom texture.",
              "preview": "end_sky/vanilla",
              "perf": 0,
              "arg": "vanilla"
            },
            {
              "name": "Otherworldly Rift",
              "desc": "Uses core shaders to create an animated sky. Also opens up extra customization options.",
              "preview": "end_sky/rift",
              "perf": -3,
              "arg": "rift"
            },
            {
              "name": "Cloudy",
              "desc": "Uses core shaders to create an animated sky. Also opens up extra customization options.",
              "preview": "end_sky/cloudy",
              "perf": -3,
              "arg": "cloudy"
            }
          ]
        },
        {
          "type": "vec3_color",
          "desc": "Choose a color for the glow from the Otherworldly Rift.",
          "key": "rift_color",
          "requires": {
            "end_sky/0": 2
